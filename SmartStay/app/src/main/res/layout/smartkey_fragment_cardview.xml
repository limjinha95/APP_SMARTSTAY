<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/smartkeyCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:background="#C8C9CA"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="HotelName"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/roomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="roomName"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                android:background="#C8C9CA"
                android:orientation="horizontal">
            </LinearLayout>

            <ImageView
                android:id="@+id/roomPic"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="1dp"
                android:background="#C8C9CA"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/smartlightBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp" />

                <ImageButton
                    android:id="@+id/smartkeyBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    app:srcCompat="@drawable/ic_lock_open_black_24dp" />

                <ImageButton
                    android:id="@+id/addgroupBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    app:srcCompat="@drawable/ic_group_add_black_24dp" />

                <ImageButton
                    android:id="@+id/callBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    app:srcCompat="@drawable/ic_phone_black_24dp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>