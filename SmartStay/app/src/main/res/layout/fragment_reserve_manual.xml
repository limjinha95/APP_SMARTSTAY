<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wap.smartstay.manualFragment.reserveManualFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="#EAEAEA"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:gravity="center_horizontal"
                android:text="예약설정"
                android:textColor="#5A5A5A"
                android:textSize="30dp" />

            <View
                android:id="@+id/view"
                android:layout_width="400dp"
                android:layout_height="2dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="50dp"
                android:background="#5A5A5A" />

            <TextView
                android:id="@+id/reserveContent1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView3"
                android:gravity="center"
                android:text="원하는 숙소를 골라주세요!"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/reserveList"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_below="@+id/reserveContent1"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/reserve" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/reserveList"
                android:gravity="center"
                android:text="원하는 날짜를 선택 후"
                android:textColor="#0054FF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:background="@drawable/reservepage"
                android:layout_margin="15dp"
                android:layout_below="@+id/textView"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="예약해 주세요!"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_below="@+id/imageView2"/>
            <TextView
                android:id="@+id/bottomText4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="#SMART STAY"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </ScrollView>

</FrameLayout>
