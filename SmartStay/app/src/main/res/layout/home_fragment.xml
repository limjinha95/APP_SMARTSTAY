<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.wap.smartstay.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_weight="0.20"
        android:padding="15dp"
        android:background="#EAEAEA"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/manualBtn"
            android:layout_width="187dp"
            android:layout_height="match_parent"
            android:background="@drawable/one" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/name1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/location3"
                android:textSize="15dp" />

            <Button
                android:id="@+id/reserveBtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#2f3849"
                android:text="@string/reservation"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0.40"
        android:padding="15dp"
        android:background="#EFC86A"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="170sp"
            android:layout_height="match_parent"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/name2"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:gravity="left"
                android:text="@string/location1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reserveBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#2f3849"
                android:text="@string/reservation"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.82"
            android:background="@drawable/two" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105sp"
        android:layout_weight="0.43"
        android:padding="15sp"
        android:background="#EAEAEA"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:layout_weight="1.09"
            android:background="@drawable/three" />

        <LinearLayout
            android:layout_width="180sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name3"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/location2"
                android:textSize="15sp" />

            <Button
                android:id="@+id/reserveBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#2f3849"
                android:text="@string/reservation"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>