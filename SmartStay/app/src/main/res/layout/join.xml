<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wap.smartstay.Main"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/xml_border">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="아이디"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/joinIdEdit"
                    android:layout_width="165dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/joinCheckIdBtn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:text="중복확인"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/xml_border">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="이름"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/joinNameEdit"
                    android:layout_width="240dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/xml_border">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="비밀번호"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/joinPwEdit"
                    android:layout_width="240dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/xml_border">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="확인"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/joinCheckPwEdit"
                    android:layout_width="240dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/xml_border">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="연락처"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/joinPhoneEdit"
                    android:layout_width="240dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/joinSaveBtn"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/white"
                    android:text="회원가입 완료"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>


</LinearLayout>