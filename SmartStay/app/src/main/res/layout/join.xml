<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wap.smartstay.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/img_logo_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="아이디"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/joinIdEdit"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:inputType="textUri"
                android:background="@null"/>

            <Button
                android:id="@+id/joinCheckIdBtn"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttonshape_basic_light"
                android:text="중복확인"
                android:textColor="@color/textcolor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="이름"
                android:textSize="18dp"
                />

            <EditText
                android:id="@+id/joinNameEdit"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:background="@null"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="비밀번호"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/joinPwEdit"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:background="@null"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="확인"
                android:textSize="18dp"
                android:background="@null"/>

            <EditText
                android:id="@+id/joinCheckPwEdit"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:background="@null"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="연락처"
                android:textSize="18dp"
                />

            <EditText
                android:id="@+id/joinPhoneEdit"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:background="@null"/>

        </LinearLayout>



            <Button
                android:id="@+id/joinSaveBtn"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@drawable/buttonshape_basic_dark"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="18dp" />



    </LinearLayout>


</LinearLayout>