<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reserveListItemLayout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/xml_border"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/reserveAccommodationImg"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:background="@drawable/one" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reserveAccommodationName"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:text="숙소이름 (방번호)"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/reserveAccommodationDuty"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="07.03화 13:00 ~ 07.04수 11:00" />

        <TextView
            android:id="@+id/reserveAccommodationInfo"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="기준4인/최대6인" />

    </LinearLayout>

</LinearLayout>